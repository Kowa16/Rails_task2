<div class="side-menu">
  <p class="active">
    <%= link_to "アカウント", user_path(current_user.id) %>
  </p>
  <p class="non-active">
    <%= link_to "プロフィール", edit_profile_path(current_user.id) %>
  </p>
</div>

<div class="edit-title">
  アカウント情報編集
</div>
<article class="user-edit">
  <%= form_for @user do |f| %>
    <div class="input-label">
      <%= f.label :email, "Email" %>
    </div>
    <div class="input-form">
      <%= f.email_field :email %>
    </div>

    <%= f.submit "更新" %>
  <% end %>
</article>
